doctype html
head
    title Chess Home
    meta(charset='UTF-8')
    style
        include main.css

.topnav
    a(style="float: left" href='./chess') « Back

div(style='text-align:center')
    h1(style='font-size: 80px') ♟️Chess
    h2(style='font-size: 80px') Top Players Leaderboard
    table
        tr
            th Pos
            th Name
            th ELO
        each row in rows
            tr
                td= row.pos
                td
                    a(href='./profile?id=' + row.name)=row.name
                td= row.elo